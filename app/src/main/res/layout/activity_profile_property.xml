        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="说明"
        android:ems="10"
        android:id="@+id/editTextRemark"
        android:layout_below="@+id/editTextName"
